<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item><!-- Set to white due to app taskDescription, ie the bar in the app overview, when switching apps-->
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:editTextStyle">@style/TextViewStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:titleTextStyle">@style/TextViewStyle</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:statusBarColor">@color/secondary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Theme using standard amiv colors, different to the default theme AppThemeLight -->
    <style name="AmivTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Text Styles -->
    <style name="TextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">@style/Body</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/din_pro_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Subheader" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/din_pro_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>
</resources>
